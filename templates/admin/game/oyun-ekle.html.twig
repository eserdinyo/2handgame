{% extends 'admin_base.html.twig' %}


{% block title %}Oyunlar{% endblock %}
{% block content %}
<!-- MAIN -->
<div class="main">
  <!-- MAIN CONTENT -->
  <div class="main-content">
    <div class="container-fluid">
      <h3 class="page-title">Oyun Ekle</h3>

      <div class="panel col-md-6">
        <div class="panel-body">
          <form method="post" enctype="multipart/form-data">
            <label for="">Oyun Ad覺</label>
            <input type="text" name="games[name]" class="form-control" placeholder="Oyun Ad覺">
            <br>
            <label for="">Oyun Fiyat覺</label>
            <input type="number" name="games[price]" class="form-control" placeholder="Oyun Fiyat覺">
            <input type="hidden" name="games[status]"  value="false">
            <br>
            <label for="">Oyun Resim</label>
            <input type="file" name="imagename"  class="form-control">

            <br>
            <label for="">Kategori</label>
            <select name="games[category]" class="form-control">
              <option value="PS4">PS4</option>
              <option value="PS3">PS3</option>
              <option value="XBOX ONE">XBOX ONE</option>
              <option value="XBOX 360">XBOX 360</option>
            </select>

            <button type="submit" class="btn btn-info" style="margin-top: 20px">Kaydet</button>
          </form>
        </div>

      </div>
      <!-- END BASIC TABLE -->

    </div>
  </div>
</div>
<!-- END MAIN -->
{% endblock %}