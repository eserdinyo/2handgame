{% extends 'admin_base.html.twig' %}


{% block title %}Oyunlar{% endblock %}
{% block content %}
<!-- MAIN -->
<div class="main">
	<!-- MAIN CONTENT -->
	<div class="main-content">
		<div class="container-fluid">
			<h3 class="page-title">Oyunlar</h3>
			<a href="{{ path('add-game') }}" class="btn btn-success mb-10" style="margin-bottom:20px"><i class="fa fa-plus"
				 style="margin-right:10px"></i>Ekle</a>

			<!-- BASIC TABLE -->
			<div class="panel">

				<div class="panel-body">
					<table class="table">
						<thead>
							<tr>
								<th>ID</th>
								<th>Name</th>
								<th>Image</th>
								<th>Price</th>
								<th>Status</th>
								<th>Category</th>
								<th>Edit</th>
								<th>Delete</th>
							</tr>
						</thead>
						<tbody>
							{% for game in games %}
							<tr>
								<td>{{game.id}}</td>
								<td>{{game.name}}</td>
								<td>
										<a href="javascript:openWin('{{ path("image-edit", {'id': game.id} ) }}','','toolbar=no,location=no, directories=0,status=no, top=100, left=200, menuBar=no, resizable=no, width=500, height=410');">
										{% if game.image == null %}
											<i class="btn btn-info fa fa-image"></i>
										{% else %}
										<img src="{{ asset('images') }}/{{game.image}}" alt="" height="40">
										{% endif %}
										</a>
								</td>
								<td>{{game.price}}</td>
								{% if game.status == "aktif" %}
									<td>
										<a class="aktif" href="#"></a>
									</td>
								{% elseif game.status == "pasif" %}
									<td>
										<a class="pasif" href="#"></a>
									</td>
								{% else %}
									<td>Null</td>
								{% endif %}
								<td>PS4</td>
								<td><a href="{{ path("edit-game", {'id': game.id} ) }}"><i class="btn btn-primary fa fa-edit"></i></a></td>
								<td><a href="{{ path("delete-game", {'id': game.id} ) }}" onclick="return confirm('Are you sure!');" ><i class="btn btn-danger fa fa-trash"></i></a> </td>
							</tr>

							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
			<!-- END BASIC TABLE -->

		</div>
	</div>
</div>
<!-- END MAIN -->
{% endblock %}